{% extends "base.html" %}

{% block title %}Nuages Storage Information{% endblock %}

{% block content %}
<script>
function getstorage(){
  var virtualprovider = $('#id_virtualprovider').val();
  var data = { 'virtualprovider' : virtualprovider } ; 
  $.ajax({  
        type: "POST",
        url: '/nuages/storage/',
        data: data,
        success: function(data) {
                $("#storageinfo").hide();
                $("#storageinfo").html(data);
                $("#storageinfo").show(500);
        },
        error: function(jqXHR, textStatus, errorThrown) {
                alert(errorThrown);
        }
        });
}
</script>

<div id="wheel2"></div>
<fieldset class="module aligned">

<select name="virtualprovider" id="id_virtualprovider">
{% for vprovider in vproviders %}
<option value="{{vprovider.name }}" >{{vprovider.name }}</option>
{% endfor %}
</select></p>

<div id="voila2"><input name="voila2" type="submit" value="Enter" onclick="getstorage();"/></div>
<p id="storageinfo"></p>
</fieldset>

{% endblock content %}               
